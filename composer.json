{
    "name": "koriym/json-schema-faker",
    "description": "Generates fake JSON by JSON schema",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Leko",
            "email": "leko.noor@gmail.com"
        },
        {
            "name": "Akhito Koriyama",
            "email": "akihito.koriyama@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "fzaninotto/faker": "^1.7"
    },
    "require-dev": {
        "justinrainbow/json-schema": "^5.2.8",
        "squizlabs/php_codesniffer": "^2.6",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "JSONSchemaFaker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JSONSchemaFaker\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit tests/ --coverage-clover=clover.xml --whitelist=src"
        ],
        "cs": [
            "php-cs-fixer fix -v --dry-run"
        ],
        "cs-fix": [
            "php-cs-fixer fix -v"
        ]
    },
    "bin": [
        "bin/fakejsons.php"
    ]
}
